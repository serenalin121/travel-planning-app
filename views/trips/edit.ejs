<%- include("../partials/header.ejs") %>
<h1>Edit Trip</h1>
<div class="row editTripForm">
  <form
    action="/trips/<%= trip._id %>?_method=PUT"
    method="POST"
    class="col s12"
  >
    <div class="row">
      <div class="input-field col s6">
        <input
          id="name"
          type="text"
          class="validate"
          name="name"
          value="<%= trip.name %> "
          required
        />
        <label for="name">Trip Name</label>
      </div>
      <div class="input-field col s6">
        <input
          id="duration"
          type="number"
          class="validate"
          min="1"
          name="duration"
          value="<%= +(trip.duration) %>"
          required
        />
        <label for="duration">Trip Duration (day)</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <textarea id="itinerary" class="materialize-textarea" name="itinerary">
<%= trip.itinerary.join(", ") %></textarea
        >
        <label for="itinerary">Itinerary</label>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input
              type="text"
              id="autocomplete-input"
              name="destination"
              class="autocomplete"
              value="<%= trip.destination %>"
            />
            <label for="autocomplete-input">Trip Destination</label>
          </div>
        </div>
      </div>
    </div>

    <div class="mapContainer">
      <div id="map"></div>
    </div>

    <a href="/trips/<%= trip._id %>" class="waves-effect waves-light btn"
      >Cancel<i class="material-icons right">cancel</i></a
    >

    <div class="row" hidden>
      <input
        id="latitude"
        type="text"
        class="validate"
        name="latitude"
        value="<%= +(trip.latitude) %>"
      />
      <input
        id="longitude"
        type="text"
        class="validate"
        name="longitude"
        value="<%= +(trip.longitude) %>"
      />
    </div>

    <button
      class="btn waves-effect waves-light right"
      type="submit"
      name="action"
    >
      Submit
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>

<script>
  let trip = <%-JSON.stringify(trip)%>
</script>

<script src="/js/showMap.js"></script>
<%- include("../partials/footer.ejs") %>
